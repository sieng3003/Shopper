@model ShopperAE.Areas.Administrator.Models.Category

@{
    ViewBag.Title = "Cập nhật danh mục";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<h2>Cập nhật danh mục</h2>

<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Category")
</div>
@using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.cateID)
        <div class="text-success">
            @ViewBag.EditCategory
        </div>
        <div class="form-group col-lg-5">
            <label>Tên danh mục</label>
            @Html.EditorFor(model => model.cateName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên danh mục..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.cateName)</div>
            <label>Hình ảnh</label>
            @*@Html.EditorFor(model=>model.catePhoto, new { htmlAttributes = new { @type = "file"} })*@
            <input type="file" name="catePhoto" onchange="ShowImagePreview(this, document.getElementById('previewImage'))"/>
            <img src="@Model.catePhoto" style="height:120px; width:auto" id="previewImage"/>(Current Image)
            <br />
            <input type="submit" value="Cập nhật" class="btn btn-default" />
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
