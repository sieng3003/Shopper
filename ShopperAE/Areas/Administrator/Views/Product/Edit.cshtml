@model ShopperAE.Areas.Administrator.Models.Product

@{
    ViewBag.Title = "Cập nhật sản phẩm";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<br />
<h2 style="color:black;">Cập nhật sản phẩm</h2>

<div>
    <i class="fa fa-undo fa-fw"></i>@Html.ActionLink("Quay lại", "Index", "Product")
</div>
<br />
@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.proID)
        <div class="text-success">
            @ViewBag.EditProError
        </div>
        <div class="col-lg-3"></div>
        <div class="form-group col-lg-12">
            <label style="color:black;">Loại sản phẩm</label>
            @Html.DropDownListFor(model => model.typeID, ViewBag.typeListEdit as SelectList, new { @class = "form-control" })


            <label style="color:black;">Hãng sản xuất</label>
            @Html.DropDownListFor(model => model.pdcID, ViewBag.pdcListEdit as SelectList, new { @class = "form-control" })

            <label style="color:black;">Tên sản phẩm</label>
            @Html.EditorFor(model => model.proName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên sản phẩm..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.proName)</div>

            <label style="color:black;">Kích cỡ</label>
            @Html.EditorFor(model => model.proSize, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập kích cỡ sản phẩm..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.proSize)</div>

            <label style="color:black;">Đơn giá</label>
            @Html.EditorFor(model => model.proPrice, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập đơn giá sản phẩm..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.proPrice)</div>

            <label style="color:black;">Chiết khấu</label>
            @Html.EditorFor(model => model.proDiscount, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập chiết khấu (%)..." } })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.proDiscount)</div>

            <label>Hình ảnh</label>
            @*@Html.EditorFor(model=>model.catePhoto, new { htmlAttributes = new { @type = "file"} })*@
            <input type="file" name="file" onchange="ShowImagePreview(this, document.getElementById('previewImage'))" />
            <img src="@Model.proPhoto" style="height:120px; width:auto" id="previewImage" />(Current Image)
            <br />

            <label style="color:black;">Mô tả</label>
            @Html.TextAreaFor(model => model.proDescription, new { @class = "form-control", @placeholder = "Nhập mô tả sản phẩm..." })
            <div class="text-danger">@Html.ValidationMessageFor(model => model.proDescription)</div>
            <br />
            <input type="submit" value="Cập nhật" class="btn btn-primary" />
        </div>
        <div class="col-lg-3"></div>
    </div>
}



<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
